<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="singin-block">
        <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :nickname, "ニックネーム" %><br />
            <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:nickname].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例) abc@gmail.com", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:email].each do |message|%>
                  <li>メールアドレス<%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "例) 6文字以上の半角英数字", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:password].each do |message|%>
                  <li>パスワード<%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワードの確認" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sing-box" %>
          </div>

          <div class="field">
            <%= f.label :last_name, "姓(全角)" %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "例) 山田", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:last_name].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :first_name, "名(全角)" %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例) 太郎", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:first_name].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :last_name_kana, "セイ(全角カナ)" %><br />
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "例) ヤマダ", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:last_name_kana].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :first_name_kana, "メイ(全角カナ)" %><br />
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例) タロウ", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:first_name_kana].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :phone_num, "電話番号(ハイフンなし)" %><br />
            <%= f.telephone_field :phone_num, autofocus: true, autocomplete: "phone_num", placeholder: "例) 09012345678", class: "sing-box" %>
            <% if @user.errors.any?%>
              <ul>
                <% @user.errors[:phone_num].each do |message|%>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>

          <div class="check-box">
            <%= f.check_box :status, value: 1%>農家の方はチェックしてください
          </div>

          <div class="actions">
            <%= f.submit "登録する", class: "actions-submit" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
